<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <EditText
        android:id="@+id/idET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="아이디 (4글자 이상)"
        android:inputType="textPersonName"
        android:textColor="#707070"
        android:textColorHint="#99707070"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <EditText
        android:id="@+id/passwordET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="비밀번호 (4글자 이상)"
        android:inputType="textPassword"
        android:textColor="#707070"
        android:textColorHint="#99707070"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/idET"
        app:layout_constraintTop_toBottomOf="@+id/idET" />

    <EditText
        android:id="@+id/nicknameET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="닉네임"
        android:inputType="textPersonName"
        android:maxLength="8"
        android:textColor="#707070"
        android:textColorHint="#99707070"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/passwordET2"
        app:layout_constraintTop_toBottomOf="@+id/passwordET2" />

    <EditText
        android:id="@+id/weightET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="체중(kg)"
        android:inputType="number|textPassword"
        android:textColor="#707070"
        android:textColorHint="#99707070"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/nicknameET"
        app:layout_constraintTop_toBottomOf="@+id/nicknameET" />

    <EditText
        android:id="@+id/passwordET2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="비밀번호 확인"
        android:inputType="textPassword"
        android:textColor="#707070"
        android:textColorHint="#99707070"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/passwordET"
        app:layout_constraintTop_toBottomOf="@+id/passwordET" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:fontFamily="@font/mapopeacefull"
        android:text="칼로리 계산의 정확도가 향상됩니다"
        android:textColor="#99707070"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/weightET"
        app:layout_constraintTop_toBottomOf="@+id/weightET" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/mapopeacefull"
        android:text="회원가입"
        android:textColor="#707070"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/registerBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="88dp"
        android:background="@drawable/register_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>