<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="200dp"
    android:background="@drawable/_0013_box">


    <Button
        android:id="@+id/editWeight_btn"
        android:layout_width="105dp"
        android:layout_height="35dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/_0012_modifyweight"
        app:layout_constraintBottom_toBottomOf="@+id/editPW_btn"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/editPW_btn"
        android:layout_width="105dp"
        android:layout_height="35dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/_0011_modifypw"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/editIntro_btn"
        android:layout_width="105dp"
        android:layout_height="35dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="124dp"
        android:background="@drawable/introduction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/back_btn"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/config_0004_quit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>


