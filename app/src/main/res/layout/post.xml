<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:background="#00F5F5F5"
    tools:context=".fragmentGeneral">


    <ImageView
        android:id="@+id/imageView26"
        android:layout_width="370dp"
        android:layout_height="160dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/commtextbox" />

    <ImageView
        android:id="@+id/content_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@+id/imageView26"
        app:layout_constraintTop_toTopOf="@+id/imageView26"
        app:srcCompat="@drawable/snowy" />

    <TextView
        android:id="@+id/content"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:ellipsize="end"
        android:fontFamily="@font/mapo"
        android:lines="3"
        android:maxLines="10"
        android:minLines="1"
        android:singleLine="false"
        android:text="sample text"
        android:textColor="#2699FB"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/content_image"
        app:layout_constraintTop_toTopOf="@+id/imageView26" />

    <TextView
        android:id="@+id/tags"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:fontFamily="@font/mapo"
        android:singleLine="true"
        android:text="#태그 #태그"
        android:textColor="#70707075"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/content"
        app:layout_constraintTop_toBottomOf="@+id/content" />

    <ImageView
        android:id="@+id/user_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView26"
        app:layout_constraintEnd_toEndOf="@+id/imageView26"
        app:srcCompat="@drawable/beth_0001" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/mapo"
        android:gravity="right"
        android:text="Name"
        android:textColor="#2699FB"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/user_level"
        app:layout_constraintEnd_toStartOf="@+id/user_icon" />

    <TextView
        android:id="@+id/user_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/mapo"
        android:gravity="right"
        android:text="Lv.00"
        android:textColor="#2699FB"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/user_icon"
        app:layout_constraintEnd_toStartOf="@+id/user_icon" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="2020.00.00 00:00:00"
        android:textColor="#707070"
        app:layout_constraintBottom_toBottomOf="@+id/user_level"
        app:layout_constraintStart_toStartOf="@+id/content_image" />

</androidx.constraintlayout.widget.ConstraintLayout>