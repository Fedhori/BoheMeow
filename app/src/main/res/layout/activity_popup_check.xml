<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="200dp"
    android:background="@drawable/popup_small">


    <Button
        android:id="@+id/no_btn"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_marginEnd="50dp"
        android:background="#00FFFFFF"
        android:text="아니오"
        android:textColor="#707070"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/yes_btn"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/yes_btn"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="25dp"
        android:background="#00FFFFFF"
        android:text="예"
        android:textColor="#707070"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkTV" />

    <TextView
        android:id="@+id/checkTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/mapopeacefull"
        android:text="로그아웃 하시겠습니까?"
        android:textColor="#707070"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>


