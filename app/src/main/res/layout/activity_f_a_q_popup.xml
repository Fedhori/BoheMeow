<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="400dp"
    android:background="@drawable/popup_box_mid"
    tools:context=".FAQPopupActivity">

    <TextView
        android:id="@+id/faqPopupQuestion"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="36dp"
        android:text="질문: 질문내용"
        android:textColor="#110F0F"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/faqPopupAnswer"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:text="답변: 답변내용"
        android:textColor="#110F0F"
        app:layout_constraintStart_toStartOf="@+id/faqPopupQuestion"
        app:layout_constraintTop_toBottomOf="@+id/faqPopupQuestion" />
</androidx.constraintlayout.widget.ConstraintLayout>