<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainmenu_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_0007_background"
    tools:context=".MainMenu">

    <Button
        android:id="@+id/btn_community"
        android:layout_width="110dp"
        android:layout_height="132dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/_0003_community"
        app:layout_constraintEnd_toStartOf="@+id/iv_window"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_to_select"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/main_0008_door"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_itemboard"
        android:layout_width="190dp"
        android:layout_height="500dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/_0000_popo_lay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/iv_window"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/main_0003_windowsunny" />

    <Button
        android:id="@+id/btn_rank"
        android:layout_width="100dp"
        android:layout_height="139dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/_0002_ranking"
        app:layout_constraintBottom_toTopOf="@+id/btn_to_select"
        app:layout_constraintStart_toStartOf="@+id/btn_community"
        app:layout_constraintTop_toBottomOf="@+id/btn_community" />

</androidx.constraintlayout.widget.ConstraintLayout>