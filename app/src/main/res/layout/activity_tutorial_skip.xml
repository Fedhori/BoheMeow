<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="150dp"
    android:background="@drawable/popup_box_small">


    <Button
        android:id="@+id/no_btn"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/popup_button_red"
        android:fontFamily="@font/mapopeacefull"
        android:text="아니오"
        android:textColor="#EEECD3"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/yes_btn" />

    <Button
        android:id="@+id/yes_btn"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/popup_button_yellow"
        android:fontFamily="@font/mapopeacefull"
        android:text="예"
        android:textColor="#110F0F"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/mapopeacefull"
        android:gravity="center"
        android:text="튜토리얼을 스킵하시겠습니까?"
        android:textColor="#110F0F"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/mapopeacefull"
        android:gravity="center"
        android:text="튜토리얼은 메인 설정창에서 다시 볼 수 있습니다."
        android:textColor="#110F0F"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text1" />

</androidx.constraintlayout.widget.ConstraintLayout>


