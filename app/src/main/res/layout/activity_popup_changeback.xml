<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="400dp"
    android:background="#FFFFFF">


    <TextView
        android:id="@+id/textView46"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/mapo"
        android:text="배경 변경"
        android:textColor="#707070"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView47"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/mapo"
        android:text="원하는 색상을 선택하세요."
        android:textColor="#707070"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView46" />

    <Button
        android:id="@+id/back_btn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/config_0004_quit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/red"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/red_tri"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/andro" />

    <Button
        android:id="@+id/white"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/white_tri"
        app:layout_constraintStart_toEndOf="@+id/purple"
        app:layout_constraintTop_toTopOf="@+id/purple" />

    <Button
        android:id="@+id/blue"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/blue_tri"
        app:layout_constraintStart_toEndOf="@+id/green"
        app:layout_constraintTop_toTopOf="@+id/andro" />

    <Button
        android:id="@+id/black"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/black_tri"
        app:layout_constraintStart_toEndOf="@+id/red"
        app:layout_constraintTop_toTopOf="@+id/red" />

    <Button
        android:id="@+id/rainbow"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/rainbow_tri"
        app:layout_constraintStart_toEndOf="@+id/blue"
        app:layout_constraintTop_toTopOf="@+id/andro" />

    <Button
        android:id="@+id/purple"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/purple_tri"
        app:layout_constraintStart_toEndOf="@+id/black"
        app:layout_constraintTop_toTopOf="@+id/black" />

    <Button
        android:id="@+id/andro"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="68dp"
        android:background="@drawable/andro_tri"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView47" />

    <Button
        android:id="@+id/green"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/green_tri"
        app:layout_constraintStart_toEndOf="@+id/andro"
        app:layout_constraintTop_toTopOf="@+id/andro" />

</androidx.constraintlayout.widget.ConstraintLayout>


